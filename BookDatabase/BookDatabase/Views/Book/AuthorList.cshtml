@*
   Page to see all the authors in the Database
*@
@model List<Author>

    <a asp-action="AddAuthor" asp-controller="Book" class="btn btn-primary">Add new Author</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Author Name</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>        
            @foreach(var author in Model)
            {
                <tr>
                    <td>@author.AuthorName</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Book" asp-action="EditAuthor"
                           asp-route-id="@author.AuthorId">Edit</a>
                        <a class="btn btn-primary" asp-controller="Book" asp-action="DeleteAuthor"
                           asp-route-id="@author.AuthorId">Delete</a>
                    </td>
                </tr>

            }        
    </tbody>

</table>
